<resources>
    <!--========================= APPLICATION =========================-->

    <!-- APPLICATION THEME -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Change the normal state of unchecked checkboxes, etc -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Overrides colorAccent on activated/checked UI controls -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- Controls the ripple coloring -->
        <item name="colorControlHighlight">@color/grey_300</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
    </style>

    <!-- TOOLBAR -->

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <!-- Set title color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:contentDescription">Toolbar overflow button.</item>
    </style>

    <!--========================= SCREENS =========================-->

    <!-- GENERAL -->

    <style name="LabelGreyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="VerticalSeparatorImageView">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_300</item>
    </style>

    <style name="HorizontalSeparatorImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_300</item>
    </style>

    <!-- ACTIVITY ENROLL -->

    <style name="ActivityEnrollEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <!-- ACTIVITY LOGIN -->

    <style name="ActivityLoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <!-- FRAGMENT SETTINGS -->

    <style name="FragmentSettingsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="FragmentSettingsWhiteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="FragmentSettingsSwitchCompat">
        <item name="colorControlActivated">@color/light_green_500</item>
        <item name="colorSwitchThumbNormal">@color/grey_400</item>
        <item name="android:colorForeground">@color/grey_500</item>
    </style>

    <style name="FragmentSettingsAccountDataTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- ACTIVITY INFORMATIONS -->

    <style name="ActivityInformationsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="ActivityInformationsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- ACTIVITY CREATE POST -->

    <style name="ActivityCreatePostTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ACTIVITY USER PROFILE -->

    <style name="ActivityUserProfileFollow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ActivityUserProfileFollowNumberTextView" parent="ActivityUserProfileFollow">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ActivityUserProfileFollowTextView" parent="ActivityUserProfileFollow">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- POST LAYOUTS -->

    <style name="LabelGreyPostTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TitlePostEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:textSize">14dp</item>
        <item name="android:maxLength">140</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <style name="PostTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="WritePostEditText" parent="TitlePostEditText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxLength">700</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <style name="CounterTextView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/grey_200</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- ACTIVITY EDIT PROFILE -->

    <style name="ActivityEditProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <style name="ActivityEditProfileTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- ACTIVITY EDIT POST -->

    <style name="ActivityEditPostTitlePostEditText" parent="TitlePostEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ActivityEditPostLabelGreyPostTextView" parent="LabelGreyPostTextView">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ActivityEditPostPostTextView" parent="PostTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ACTIVITY COMMENT -->

    <style name="CommentCounterTextView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/grey_200</item>
        <item name="android:layout_gravity">bottom|right|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>